<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Admin Panel | FashionStore</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Admin CSS -->
    <link href="~/Content/admin.css" rel="stylesheet" />
</head>
<body>
    <div class="admin-wrapper">
        <!-- Sidebar -->
        <aside class="admin-sidebar" id="adminSidebar">
            <div class="sidebar-header">
                <a href="@Url.Action("Index", "AdminDashboard")" class="sidebar-logo">
                    <i class="fas fa-store"></i>
                    <span>FashionStore</span>
                    <small>Admin Panel</small>
                </a>
                <button class="sidebar-toggle d-lg-none" id="sidebarToggle">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <nav class="sidebar-nav">
                <ul class="nav-menu">
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "AdminDashboard")" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "AdminDashboard" ? "active" : "")">
                            <i class="fas fa-chart-line"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "AdminProduct")" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "AdminProduct" ? "active" : "")">
                            <i class="fas fa-box"></i>
                            <span>Sản phẩm</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "AdminOrder")" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "AdminOrder" ? "active" : "")">
                            <i class="fas fa-shopping-cart"></i>
                            <span>Đơn hàng</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "AdminUser")" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "AdminUser" ? "active" : "")">
                            <i class="fas fa-users"></i>
                            <span>Người dùng</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "AdminReview")" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "AdminReview" ? "active" : "")">
                            <i class="fas fa-star"></i>
                            <span>Đánh giá & Bình luận</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "AdminInventory")" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "AdminInventory" ? "active" : "")">
                            <i class="fas fa-warehouse"></i>
                            <span>Quản lý kho</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "AdminPromotion")" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "AdminPromotion" ? "active" : "")">
                            <i class="fas fa-tags"></i>
                            <span>Khuyến mãi</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "AdminCoupon")" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "AdminCoupon" ? "active" : "")">
                            <i class="fas fa-ticket-alt"></i>
                            <span>Mã giảm giá</span>
                        </a>
                    </li>
                    <li class="nav-divider"></li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Home")" class="nav-link" target="_blank">
                            <i class="fas fa-external-link-alt"></i>
                            <span>Xem website</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Logout", "Account")" class="nav-link text-danger">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Đăng xuất</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Main Content -->
        <div class="admin-main">
            <!-- Top Bar -->
            <header class="admin-header">
                <div class="header-left">
                    <button class="sidebar-toggle-mobile d-lg-none" id="sidebarToggleMobile">
                        <i class="fas fa-bars"></i>
                    </button>
                    <h4 class="page-title mb-0">@ViewBag.Title</h4>
                </div>
                <div class="header-right">
                    <div class="user-info">
                        <span class="user-name">
                            <i class="fas fa-user-circle me-2"></i>
                            @(Session["FullName"] ?? "Admin")
                        </span>
                    </div>
                </div>
            </header>

            <!-- Content Area -->
            <main class="admin-content">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @RenderBody()
            </main>

            <!-- Footer -->
            <footer class="admin-footer">
                <p class="mb-0">&copy; @DateTime.Now.Year FashionStore Admin Panel. All rights reserved.</p>
            </footer>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery (for AJAX) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- Admin JS -->
    <script>
        // Sidebar toggle
        document.getElementById('sidebarToggleMobile')?.addEventListener('click', function() {
            document.getElementById('adminSidebar').classList.add('show');
        });

        document.getElementById('sidebarToggle')?.addEventListener('click', function() {
            document.getElementById('adminSidebar').classList.remove('show');
        });

        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(event) {
            const sidebar = document.getElementById('adminSidebar');
            const toggleBtn = document.getElementById('sidebarToggleMobile');
            
            if (window.innerWidth < 992) {
                if (sidebar && !sidebar.contains(event.target) && !toggleBtn?.contains(event.target)) {
                    sidebar.classList.remove('show');
                }
            }
        });

        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>

