@{
    ViewBag.Title = "Không có quyền truy cập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="mt-5">
                <i class="fas fa-ban" style="font-size: 80px; color: #dc3545; margin-bottom: 20px;"></i>
                <h2>Không có quyền truy cập</h2>
                <p class="text-muted">Bạn không có quyền truy cập vào trang này.</p>
                <p class="text-muted">Vui lòng liên hệ quản trị viên nếu bạn cần quyền truy cập.</p>
                <div class="mt-4">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                        <i class="fas fa-home me-1"></i>Về trang chủ
                    </a>
                    <a href="@Url.Action("Logout", "Account")" class="btn btn-secondary">
                        <i class="fas fa-sign-out-alt me-1"></i>Đăng xuất
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

