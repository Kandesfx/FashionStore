    <!-- Back to Top Button -->
    <button id="backToTop" class="back-to-top" title="Lên đầu trang">
        <i class="fas fa-arrow-up"></i>
    </button>

    <!-- Purchase toast -->
    <div id="purchaseToast" class="purchase-toast" aria-live="polite">
        <img id="purchaseToastImage" src="/Image/default-product.jpg" alt="Sản phẩm">
        <div class="purchase-toast-content">
            <div class="purchase-toast-title">Sản phẩm</div>
            <div id="purchaseToastName" class="purchase-toast-name">FashionStore</div>
            <div id="purchaseToastTime" class="purchase-toast-time">Đang tải sản phẩm...</div>
            <a id="purchaseToastLink" class="purchase-toast-link" href="#">
                Xem chi tiết <i class="fas fa-arrow-right"></i>
            </a>
        </div>
        <button id="purchaseToastClose" class="purchase-toast-close" aria-label="Đóng thông báo">&times;</button>
    </div>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JS -->
    <script>
        // Navbar scroll effect
        window.addEventListener('scroll', function () {
            const navbar = document.querySelector('.navbar');
            const backToTop = document.getElementById('backToTop');

            if (window.pageYOffset > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }

            if (window.pageYOffset > 300) {
                backToTop.style.display = 'flex';
            } else {
                backToTop.style.display = 'none';
            }
        });

        // Back to top button
        document.getElementById('backToTop').addEventListener('click', function () {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });

        // Update cart badge
        function updateCartBadge(count) {
            const badge = document.getElementById('cart-badge');
            if (badge) {
                badge.textContent = count;
                badge.style.display = count > 0 ? 'block' : 'none';
            }
        }

        // Load cart count on page load (if user is logged in)
        @if (Session["UserId"] != null)
        {
            <text>
            (function() {
                fetch('@Url.Action("GetCartCount", "Cart")')
                    .then(response => response.json())
                    .then(data => {
                        if (data.count !== undefined) {
                            updateCartBadge(data.count);
                        }
                    })
                    .catch(error => console.error('Error loading cart count:', error));
            })();
            </text>
        }

        // Close mobile menu when clicking outside
        document.addEventListener('click', function (event) {
            const navbar = document.getElementById('mainNav');
            const toggler = document.querySelector('.navbar-toggler');

            if (navbar && toggler && !navbar.contains(event.target) && !toggler.contains(event.target)) {
                const bsCollapse = bootstrap.Collapse.getInstance(navbar);
                if (bsCollapse) {
                    bsCollapse.hide();
                }
            }
        });

        // Live Search Functionality
        document.addEventListener('DOMContentLoaded', function() {
            let searchTimeout;
            const searchInput = document.getElementById('searchInput');
            const mobileSearchInput = document.getElementById('mobileSearchInput');
            const liveSearchDropdown = document.getElementById('liveSearchDropdown');
            const mobileLiveSearchDropdown = document.getElementById('mobileLiveSearchDropdown');
            const liveSearchResults = document.getElementById('liveSearchResults');
            const mobileLiveSearchResults = document.getElementById('mobileLiveSearchResults');

            // Check if elements exist
            if (!searchInput || !liveSearchDropdown || !liveSearchResults) {
                console.warn('Live search elements not found');
                return;
            }

            function formatPrice(price) {
                return new Intl.NumberFormat('vi-VN').format(price) + '₫';
            }

            function calculateDiscount(price, discountPrice) {
                if (!discountPrice || discountPrice >= price) return null;
                const discount = Math.round(((price - discountPrice) / price) * 100);
                return discount > 0 ? discount : null;
            }

            function renderSearchResults(products, container) {
                if (!container) return;
                
                if (!products || products.length === 0) {
                    container.innerHTML = '<div class="live-search-empty">Không tìm thấy sản phẩm nào</div>';
                    return;
                }

                const baseUrl = '@Url.Action("Details", "Product")';
                container.innerHTML = products.map(product => {
                    const discount = product.hasDiscount ? calculateDiscount(product.price, product.discountPrice) : null;
                    const imageUrl = product.imageUrl || '/Image/default-product.jpg';
                    const finalPrice = product.finalPrice || product.price;
                    const productUrl = baseUrl.replace(/\/\d+$/, '') + '/' + product.id;
                    const productName = (product.productName || '').replace(/'/g, "&#39;").replace(/"/g, "&quot;");

                    return `
                        <div class="live-search-item" onclick="window.location.href='${productUrl}'">
                            <img src="${imageUrl}" alt="${productName}" onerror="this.src='/Image/default-product.jpg'">
                            <div class="live-search-item-info">
                                <div class="live-search-item-name">${productName}</div>
                                <div class="live-search-item-price">
                                    <span class="live-search-price-current">${formatPrice(finalPrice)}</span>
                                    ${product.hasDiscount ? `<span class="live-search-price-old">${formatPrice(product.price)}</span>` : ''}
                                    ${discount ? `<span class="live-search-price-discount">-${discount}%</span>` : ''}
                                </div>
                            </div>
                        </div>
                    `;
                }).join('');
            }

            function performLiveSearch(keyword, isMobile = false) {
                if (!keyword || keyword.trim().length === 0) {
                    if (isMobile && mobileLiveSearchDropdown) {
                        mobileLiveSearchDropdown.style.display = 'none';
                    } else if (liveSearchDropdown) {
                        liveSearchDropdown.style.display = 'none';
                    }
                    return;
                }

                // Build API URL
                const baseApiUrl = '@Url.Content("~/")';
                const apiUrl = (baseApiUrl.endsWith('/') ? baseApiUrl : baseApiUrl + '/') + 'api/products/search/live?keyword=' + encodeURIComponent(keyword) + '&limit=5';
                console.log('Searching for:', keyword, 'URL:', apiUrl);

                fetch(apiUrl)
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    })
                    .then(data => {
                        console.log('Search results:', data);
                        if (data.success && data.data) {
                            if (isMobile) {
                                if (mobileLiveSearchResults) {
                                    renderSearchResults(data.data, mobileLiveSearchResults);
                                }
                                if (mobileLiveSearchDropdown) {
                                    mobileLiveSearchDropdown.style.display = 'block';
                                }
                            } else {
                                if (liveSearchResults) {
                                    renderSearchResults(data.data, liveSearchResults);
                                }
                                if (liveSearchDropdown) {
                                    liveSearchDropdown.style.display = 'block';
                                }
                            }
                        } else {
                            console.warn('No data in response:', data);
                            if (isMobile && mobileLiveSearchDropdown) {
                                mobileLiveSearchDropdown.style.display = 'none';
                            } else if (liveSearchDropdown) {
                                liveSearchDropdown.style.display = 'none';
                            }
                        }
                    })
                    .catch(error => {
                        console.error('Error performing live search:', error);
                        if (isMobile && mobileLiveSearchDropdown) {
                            mobileLiveSearchDropdown.style.display = 'none';
                        } else if (liveSearchDropdown) {
                            liveSearchDropdown.style.display = 'none';
                        }
                    });
            }

            // Desktop search
            if (searchInput) {
                searchInput.addEventListener('input', function(e) {
                    clearTimeout(searchTimeout);
                    const keyword = e.target.value.trim();

                    searchTimeout = setTimeout(() => {
                        performLiveSearch(keyword, false);
                    }, 300);
                });

                searchInput.addEventListener('focus', function(e) {
                    if (e.target.value.trim().length > 0) {
                        performLiveSearch(e.target.value.trim(), false);
                    }
                });

                // Hide dropdown when clicking outside
                document.addEventListener('click', function(e) {
                    if (liveSearchDropdown && searchInput && 
                        !searchInput.contains(e.target) && 
                        !liveSearchDropdown.contains(e.target)) {
                        liveSearchDropdown.style.display = 'none';
                    }
                });
            }

            // Mobile search
            if (mobileSearchInput) {
                mobileSearchInput.addEventListener('input', function(e) {
                    clearTimeout(searchTimeout);
                    const keyword = e.target.value.trim();

                    searchTimeout = setTimeout(() => {
                        performLiveSearch(keyword, true);
                    }, 300);
                });

                mobileSearchInput.addEventListener('focus', function(e) {
                    if (e.target.value.trim().length > 0) {
                        performLiveSearch(e.target.value.trim(), true);
                    }
                });

                // Hide dropdown when clicking outside
                document.addEventListener('click', function(e) {
                    if (mobileLiveSearchDropdown && mobileSearchInput && 
                        !mobileSearchInput.contains(e.target) && 
                        !mobileLiveSearchDropdown.contains(e.target)) {
                        mobileLiveSearchDropdown.style.display = 'none';
                    }
                });
            }
        });

        // Random purchase toast
        document.addEventListener('DOMContentLoaded', function () {
            const toast = document.getElementById('purchaseToast');
            const toastName = document.getElementById('purchaseToastName');
            const toastTime = document.getElementById('purchaseToastTime');
            const toastImage = document.getElementById('purchaseToastImage');
            const toastLink = document.getElementById('purchaseToastLink');
            const toastClose = document.getElementById('purchaseToastClose');

            if (!toast || !toastName || !toastTime || !toastImage) {
                console.warn('Purchase toast elements not found');
                return;
            }

            const baseApiUrl = '@Url.Content("~/")';
            const apiUrl = (baseApiUrl.endsWith('/') ? baseApiUrl : baseApiUrl + '/') + 'api/products?page=1&pageSize=50';
            const detailBaseUrl = '@Url.Action("Details", "Product", new { id = "__id__" })';
            const fallbackImage = '/Image/default-product.jpg';
            let products = [];
            let hideTimeout;
            let intervalId;
            let lastCloseAt = 0;

            function randomMinutesAgo() {
                const minutes = Math.floor(Math.random() * 50) + 5; // 5-54 phút
                return `Đã được mua cách đây ${minutes} phút`;
            }

            function getRandomProduct() {
                if (!products.length) return null;
                const idx = Math.floor(Math.random() * products.length);
                return products[idx];
            }

            function hideToast() {
                toast.classList.remove('show');
            }

            function showToast(product) {
                if (!product) return;

                // Nếu vừa đóng thủ công, chờ 5s mới hiện lại
                if (Date.now() - lastCloseAt < 5000) {
                    return;
                }

                toastName.textContent = product.productName || 'Sản phẩm';
                toastTime.textContent = randomMinutesAgo();
                toastImage.src = product.imageUrl || fallbackImage;
                toastImage.onerror = function () { this.src = fallbackImage; };
                if (toastLink && detailBaseUrl) {
                    toastLink.href = detailBaseUrl.replace('__id__', product.id);
                }

                toast.classList.add('show');

                clearTimeout(hideTimeout);
                hideTimeout = setTimeout(hideToast, 4200);
            }

            function startRotation() {
                if (!products.length) return;

                showToast(getRandomProduct());

                clearInterval(intervalId);
                intervalId = setInterval(() => {
                    showToast(getRandomProduct());
                }, 5000);
            }

            fetch(apiUrl)
                .then(response => response.json())
                .then(data => {
                    if (data && data.data && data.data.length) {
                        // Ưu tiên sản phẩm có ảnh
                        const withImage = data.data.filter(p => p.imageUrl);
                        products = withImage.length ? withImage : data.data;
                        startRotation();
                    }
                })
                .catch(error => console.error('Không tải được danh sách sản phẩm cho toast:', error));

            toastClose?.addEventListener('click', function () {
                lastCloseAt = Date.now();
                hideToast();
            });
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>