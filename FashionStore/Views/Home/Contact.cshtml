
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .contact-hero {
        background: linear-gradient(135deg, rgba(26, 26, 26, 0.9), rgba(45, 45, 45, 0.8)),
                    url('https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?w=1200') center/cover;
        color: white;
        padding: 100px 0 80px;
        text-align: center;
        position: relative;
    }

    .contact-hero h1 {
        font-family: 'Playfair Display', serif;
        font-size: 56px;
        font-weight: 700;
        margin-bottom: 20px;
        letter-spacing: 2px;
    }

    .contact-hero p {
        font-size: 20px;
        max-width: 700px;
        margin: 0 auto;
        line-height: 1.8;
        opacity: 0.95;
    }

    .section-title {
        font-family: 'Playfair Display', serif;
        font-size: 42px;
        font-weight: 700;
        color: #1a1a1a;
        text-align: center;
        margin-bottom: 15px;
    }

    .section-subtitle {
        text-align: center;
        color: #666;
        font-size: 18px;
        max-width: 700px;
        margin: 0 auto 50px;
        line-height: 1.8;
    }

    .section-divider {
        width: 80px;
        height: 3px;
        background: linear-gradient(90deg, transparent, #c9a063, transparent);
        margin: 20px auto 40px;
    }

    /* Contact Info Section */
    .contact-info-section {
        padding: 80px 0;
        background: white;
    }

    .info-card {
        background: #f8f9fa;
        padding: 40px 30px;
        border-radius: 15px;
        text-align: center;
        transition: all 0.3s ease;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        height: 100%;
        border: 2px solid transparent;
    }

    .info-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 40px rgba(0,0,0,0.1);
        border-color: #c9a063;
        background: white;
    }

    .info-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #c9a063, #d4b072);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 25px;
        font-size: 36px;
        color: white;
        box-shadow: 0 5px 20px rgba(201, 160, 99, 0.3);
    }

    .info-card h4 {
        font-family: 'Playfair Display', serif;
        font-size: 24px;
        color: #1a1a1a;
        margin-bottom: 15px;
        font-weight: 600;
    }

    .info-card p {
        color: #666;
        line-height: 1.8;
        font-size: 15px;
        margin-bottom: 10px;
    }

    .info-card a {
        color: #c9a063;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
    }

    .info-card a:hover {
        color: #1a1a1a;
    }

    /* Contact Form Section */
    .contact-form-section {
        padding: 80px 0;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }

    .form-container {
        background: white;
        padding: 50px;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        font-weight: 600;
        color: #1a1a1a;
        margin-bottom: 10px;
        font-size: 15px;
        display: block;
    }

    .form-control {
        border: 2px solid #e5e5e5;
        border-radius: 10px;
        padding: 12px 20px;
        font-size: 15px;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #c9a063;
        box-shadow: 0 0 0 0.2rem rgba(201, 160, 99, 0.15);
        outline: none;
    }

    textarea.form-control {
        min-height: 150px;
        resize: vertical;
    }

    .btn-submit {
        background: #1a1a1a;
        color: white;
        padding: 15px 50px;
        border: none;
        border-radius: 50px;
        font-size: 16px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 5px 20px rgba(0,0,0,0.2);
        cursor: pointer;
        width: 100%;
    }

    .btn-submit:hover {
        background: #c9a063;
        transform: translateY(-3px);
        box-shadow: 0 8px 30px rgba(0,0,0,0.3);
    }

    .contact-image {
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 40px rgba(0,0,0,0.15);
        height: 100%;
        min-height: 500px;
    }

    .contact-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* Map Section */
    .map-section {
        padding: 80px 0;
        background: white;
    }

    .map-container {
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        height: 450px;
    }

    .map-container iframe {
        width: 100%;
        height: 100%;
        border: none;
    }

    /* Store Locations */
    .stores-section {
        padding: 80px 0;
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
        color: white;
    }

    .stores-section .section-title,
    .stores-section .section-subtitle {
        color: white;
    }

    .store-card {
        background: rgba(255,255,255,0.1);
        backdrop-filter: blur(10px);
        padding: 30px;
        border-radius: 15px;
        transition: all 0.3s ease;
        border: 1px solid rgba(255,255,255,0.1);
        height: 100%;
    }

    .store-card:hover {
        background: rgba(255,255,255,0.15);
        transform: translateY(-5px);
        border-color: #c9a063;
    }

    .store-card h5 {
        font-family: 'Playfair Display', serif;
        font-size: 22px;
        color: #c9a063;
        margin-bottom: 20px;
        font-weight: 600;
    }

    .store-info {
        display: flex;
        align-items: start;
        margin-bottom: 15px;
        gap: 15px;
    }

    .store-info i {
        color: #c9a063;
        font-size: 18px;
        margin-top: 2px;
        min-width: 20px;
    }

    .store-info p {
        margin: 0;
        line-height: 1.8;
        color: rgba(255,255,255,0.9);
    }

    /* FAQ Section */
    .faq-section {
        padding: 80px 0;
        background: white;
    }

    .faq-item {
        background: #f8f9fa;
        border-radius: 15px;
        padding: 25px 30px;
        margin-bottom: 20px;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .faq-item:hover {
        border-color: #c9a063;
        background: white;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
    }

    .faq-question {
        font-family: 'Playfair Display', serif;
        font-size: 20px;
        color: #1a1a1a;
        margin-bottom: 15px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .faq-question i {
        color: #c9a063;
        font-size: 24px;
    }

    .faq-answer {
        color: #666;
        line-height: 1.8;
        margin-bottom: 0;
        padding-left: 39px;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .contact-hero h1 {
            font-size: 36px;
        }

        .contact-hero p {
            font-size: 16px;
        }

        .section-title {
            font-size: 32px;
        }

        .form-container {
            padding: 30px 20px;
        }

        .contact-image {
            min-height: 300px;
            margin-bottom: 30px;
        }

        .map-container {
            height: 300px;
        }
    }

    /* Success Message */
    .alert-success {
        background: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
        border-radius: 10px;
        padding: 15px 20px;
        margin-bottom: 25px;
        display: none;
    }
</style>

