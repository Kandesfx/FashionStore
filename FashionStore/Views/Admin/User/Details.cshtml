@model FashionStore.Models.Entities.User

@{
    ViewBag.Title = "Chi tiết người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>Chi tiết người dùng</h2>
    <hr>

    <dl class="dl-horizontal">
        <dt>ID:</dt>
        <dd>@Model.Id</dd>

        <dt>Username:</dt>
        <dd>@Model.Username</dd>

        <dt>Email:</dt>
        <dd>@Model.Email</dd>

        <dt>Họ tên:</dt>
        <dd>@Model.FullName</dd>

        <dt>Điện thoại:</dt>
        <dd>@Model.Phone</dd>

        <dt>Địa chỉ:</dt>
        <dd>@Model.Address</dd>

        <dt>Vai trò:</dt>
        <dd>@Model.Role.RoleName</dd>

        <dt>Trạng thái:</dt>
        <dd>@(Model.IsActive ? "Kích hoạt" : "Tắt")</dd>

        <dt>Ngày tạo:</dt>
        <dd>@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>
    </dl>

    <div class="mt-3">
        <a href="@Url.Action("Edit", "AdminUser", new { id = Model.Id })" class="btn btn-warning">Sửa</a>
        <a href="@Url.Action("Index", "AdminUser")" class="btn btn-secondary">Quay lại</a>
    </div>
</div>

