@model FashionStore.Models.Entities.User

@{
    ViewBag.Title = "Chi tiết người dùng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-card">
    <div class="card-header">
        <h5 class="card-title">
            <i class="fas fa-user-circle me-2"></i>Chi tiết người dùng #@Model.Id
        </h5>
        <div class="action-buttons">
            <a href="@Url.Action("Edit", "AdminUser", new { id = Model.Id })" class="btn btn-sm btn-warning">
                <i class="fas fa-edit me-1"></i>Sửa
            </a>
            <a href="@Url.Action("Index", "AdminUser")" class="btn btn-sm btn-secondary">
                <i class="fas fa-arrow-left me-1"></i>Quay lại
            </a>
        </div>
    </div>

    <div class="p-4">
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="mb-3">
                    <strong>Username:</strong>
                    <p class="mb-0">@Model.Username</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <strong>Email:</strong>
                    <p class="mb-0">@Model.Email</p>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <div class="mb-3">
                    <strong>Họ tên:</strong>
                    <p class="mb-0">@Model.FullName</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <strong>Điện thoại:</strong>
                    <p class="mb-0">@(Model.Phone ?? "N/A")</p>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-12">
                <div class="mb-3">
                    <strong>Địa chỉ:</strong>
                    <p class="mb-0">@(Model.Address ?? "N/A")</p>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <div class="mb-3">
                    <strong>Vai trò:</strong>
                    <p class="mb-0">
                        @if (Model.Role != null)
                        {
                            @if (Model.Role.RoleName == "Admin")
                            {
                                <span class="badge badge-danger">@Model.Role.RoleName</span>
                            }
                            else
                            {
                                <span class="badge badge-info">@Model.Role.RoleName</span>
                            }
                        }
                        else
                        {
                            <span class="badge badge-secondary">N/A</span>
                        }
                    </p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <strong>Trạng thái:</strong>
                    <p class="mb-0">
                        @if (Model.IsActive)
                        {
                            <span class="badge badge-success">Kích hoạt</span>
                        }
                        else
                        {
                            <span class="badge badge-secondary">Tắt</span>
                        }
                    </p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <strong>Ngày tạo:</strong>
                    <p class="mb-0">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
            </div>
        </div>
    </div>
</div>

