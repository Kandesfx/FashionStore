@{
    ViewBag.Title = "Quản lý người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>Quản lý người dùng</h2>
    <hr>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Họ tên</th>
                <th>Email</th>
                <th>Vai trò</th>
                <th>Trạng thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.Users != null)
            {
                foreach (var user in ViewBag.Users)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Username</td>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>@user.Role.RoleName</td>
                        <td>
                            @if (user.IsActive)
                            {
                                <span class="badge badge-success">Kích hoạt</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">Tắt</span>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("Details", "AdminUser", new { id = user.Id })" class="btn btn-sm btn-info">Chi tiết</a>
                            <a href="@Url.Action("Edit", "AdminUser", new { id = user.Id })" class="btn btn-sm btn-warning">Sửa</a>
                            <a href="@Url.Action("Delete", "AdminUser", new { id = user.Id })" class="btn btn-sm btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    @if (ViewBag.TotalPages > 1)
    {
        <nav>
            <ul class="pagination">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", "AdminUser", new { page = i })">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

