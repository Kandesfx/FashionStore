@{
    ViewBag.Title = "Thống kê đánh giá";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-card">
    <div class="card-header">
        <h5 class="card-title">
            <i class="fas fa-chart-bar me-2"></i>Thống kê đánh giá
        </h5>
        <a href="@Url.Action("Index", "AdminReview")" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Quay lại
        </a>
    </div>

    @if (ViewBag.Product != null)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h6>Sản phẩm: @ViewBag.Product.ProductName</h6>
                <p class="text-muted mb-0">ID: @ViewBag.Product.Id</p>
            </div>
        </div>
    }

    <div class="row">
        <!-- Overall Statistics -->
        <div class="col-md-3">
            <div class="card text-center mb-3">
                <div class="card-body">
                    <h3 class="text-primary">@(ViewBag.TotalReviews ?? 0)</h3>
                    <p class="text-muted mb-0">Tổng đánh giá</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center mb-3">
                <div class="card-body">
                    @{
                        double avgRating = ViewBag.AverageRating != null ? (double)ViewBag.AverageRating : 0.0;
                    }
                    <h3 class="text-warning">@avgRating.ToString("F1")</h3>
                    <p class="text-muted mb-0">Điểm trung bình</p>
                    <div class="mt-2">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <i class="fas fa-star @(i <= Math.Round(avgRating) ? "text-warning" : "text-muted")"></i>
                        }
                    </div>
                </div>
            </div>
        </div>

        @if (ViewBag.Product != null)
        {
            <div class="col-md-3">
                <div class="card text-center mb-3">
                    <div class="card-body">
                        <h3 class="text-success">@(ViewBag.VerifiedPurchaseCount ?? 0)</h3>
                        <p class="text-muted mb-0">Đánh giá đã mua</p>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-center mb-3">
                    <div class="card-body">
                        <h3 class="text-info">@(ViewBag.ReviewsWithImagesCount ?? 0)</h3>
                        <p class="text-muted mb-0">Có ảnh</p>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="col-md-3">
                <div class="card text-center mb-3">
                    <div class="card-body">
                        <h3 class="text-warning">@(ViewBag.PendingReviews ?? 0)</h3>
                        <p class="text-muted mb-0">Chờ duyệt</p>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card text-center mb-3">
                    <div class="card-body">
                        <h3 class="text-danger">@(ViewBag.ReportedReviews ?? 0)</h3>
                        <p class="text-muted mb-0">Bị báo cáo</p>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (ViewBag.RatingDistribution != null)
    {
        <div class="card">
            <div class="card-header bg-light">
                <h6 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Phân bố điểm đánh giá</h6>
            </div>
            <div class="card-body">
                @{
                    var distribution = ViewBag.RatingDistribution as System.Collections.Generic.Dictionary<int, int>;
                    int total = distribution != null ? distribution.Values.Sum() : 0;
                }
                @if (total > 0)
                {
                    for (int rating = 5; rating >= 1; rating--)
                    {
                        int count = distribution != null && distribution.ContainsKey(rating) ? distribution[rating] : 0;
                        double percentage = total > 0 ? (count * 100.0 / total) : 0;
                        
                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <div>
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="fas fa-star @(i <= rating ? "text-warning" : "text-muted")"></i>
                                    }
                                    <span class="ms-2">@rating sao</span>
                                </div>
                                <div>
                                    <strong>@count</strong> 
                                    <small class="text-muted">(@percentage.ToString("F1")%)</small>
                                </div>
                            </div>
                            <div class="progress" style="height: 25px;">
                                <div class="progress-bar bg-warning" role="progressbar" 
                                     style="width: @percentage%" 
                                     aria-valuenow="@percentage" 
                                     aria-valuemin="0" 
                                     aria-valuemax="100">
                                    @if (percentage > 5)
                                    {
                                        <span>@count</span>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted text-center">Chưa có dữ liệu phân bố điểm đánh giá</p>
                }
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center">
                <i class="fas fa-chart-bar fa-3x text-muted mb-3"></i>
                <p class="text-muted">Chưa có dữ liệu thống kê đánh giá</p>
            </div>
        </div>
    }
</div>

