@{
    ViewBag.Title = "Quản lý báo cáo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-card">
    <div class="card-header">
        <h5 class="card-title">
            <i class="fas fa-flag me-2"></i>Quản lý báo cáo đánh giá & bình luận
        </h5>
        <a href="@Url.Action("Index", "AdminReview")" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Quay lại
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Tabs -->
    <div class="mb-3">
        <ul class="nav nav-tabs" role="tablist">
            @foreach (var statusOption in ViewBag.Statuses)
            {
                <li class="nav-item">
                    <a class="nav-link @(ViewBag.Status == statusOption ? "active" : "")" 
                       href="@Url.Action("Reports", new { status = statusOption })">
                        @if (statusOption == "Pending")
                        {
                            @:<i class="fas fa-clock me-1"></i>Chờ xử lý
                        }
                        else if (statusOption == "Reviewed")
                        {
                            @:<i class="fas fa-eye me-1"></i>Đã xem
                        }
                        else if (statusOption == "Resolved")
                        {
                            @:<i class="fas fa-check me-1"></i>Đã xử lý
                        }
                        else if (statusOption == "Dismissed")
                        {
                            @:<i class="fas fa-times me-1"></i>Đã bỏ qua
                        }
                    </a>
                </li>
            }
        </ul>
    </div>

    @if (ViewBag.Reports != null && ((System.Collections.Generic.IEnumerable<dynamic>)ViewBag.Reports).Any())
    {
        <div class="table-wrapper">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Loại</th>
                        <th>Đối tượng</th>
                        <th>Loại báo cáo</th>
                        <th>Người báo cáo</th>
                        <th>Lý do</th>
                        <th>Trạng thái</th>
                        <th>Ngày tạo</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var report in ViewBag.Reports)
                    {
                        <tr>
                            <td><strong>#@report.Id</strong></td>
                            <td>
                                @if (report.ProductReviewId.HasValue)
                                {
                                    <span class="badge bg-info">
                                        <i class="fas fa-star me-1"></i>Đánh giá
                                    </span>
                                }
                                else if (report.ReviewCommentId.HasValue)
                                {
                                    <span class="badge bg-warning">
                                        <i class="fas fa-comment me-1"></i>Bình luận
                                    </span>
                                }
                            </td>
                            <td>
                                @if (report.ProductReviewId.HasValue && report.ProductReview != null)
                                {
                                    <a href="@Url.Action("Details", "AdminReview", new { id = report.ProductReviewId })" target="_blank">
                                        Đánh giá #@report.ProductReviewId
                                    </a>
                                    <br />
                                    <small class="text-muted">@(report.ProductReview.Product?.ProductName ?? "N/A")</small>
                                }
                                else if (report.ReviewCommentId.HasValue)
                                {
                                    <span>Bình luận #@report.ReviewCommentId</span>
                                }
                            </td>
                            <td>
                                <span class="badge bg-secondary">@report.ReportType</span>
                            </td>
                            <td>
                                @if (report.User != null)
                                {
                                    <span>@report.User.Username</span>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td>
                                <strong>@report.Reason</strong>
                                @if (!string.IsNullOrEmpty(report.Description))
                                {
                                    <br />
                                    <small class="text-muted">@(report.Description.Length > 50 ? report.Description.Substring(0, 50) + "..." : report.Description)</small>
                                }
                            </td>
                            <td>
                                @if (report.Status == "Pending")
                                {
                                    <span class="badge bg-warning">
                                        <i class="fas fa-clock me-1"></i>Chờ xử lý
                                    </span>
                                }
                                else if (report.Status == "Reviewed")
                                {
                                    <span class="badge bg-info">
                                        <i class="fas fa-eye me-1"></i>Đã xem
                                    </span>
                                }
                                else if (report.Status == "Resolved")
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check me-1"></i>Đã xử lý
                                    </span>
                                }
                                else if (report.Status == "Dismissed")
                                {
                                    <span class="badge bg-secondary">
                                        <i class="fas fa-times me-1"></i>Đã bỏ qua
                                    </span>
                                }
                            </td>
                            <td>
                                <small>@report.CreatedDate.ToString("dd/MM/yyyy HH:mm")</small>
                            </td>
                            <td>
                                @if (report.Status == "Pending")
                                {
                                    <div class="btn-group btn-group-sm">
                                        <button type="button" class="btn btn-success" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#resolveModal@report.Id"
                                                title="Xử lý">
                                            <i class="fas fa-check"></i>
                                        </button>
                                        <button type="button" class="btn btn-secondary" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#dismissModal@report.Id"
                                                title="Bỏ qua">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>

                                    <!-- Resolve Modal -->
                                    <div class="modal fade" id="resolveModal@report.Id" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Xử lý báo cáo</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <form method="post" action="@Url.Action("ResolveReport", "AdminReview")">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="reportId" value="@report.Id" />
                                                    <input type="hidden" name="isResolved" value="true" />
                                                    <div class="modal-body">
                                                        <div class="mb-3">
                                                            <label class="form-label">Ghi chú:</label>
                                                            <textarea name="adminNotes" class="form-control" rows="3" 
                                                                      placeholder="Nhập ghi chú về việc xử lý báo cáo..."></textarea>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                                        <button type="submit" class="btn btn-success">Xác nhận xử lý</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Dismiss Modal -->
                                    <div class="modal fade" id="dismissModal@report.Id" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Bỏ qua báo cáo</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <form method="post" action="@Url.Action("ResolveReport", "AdminReview")">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="reportId" value="@report.Id" />
                                                    <input type="hidden" name="isResolved" value="false" />
                                                    <div class="modal-body">
                                                        <div class="mb-3">
                                                            <label class="form-label">Ghi chú:</label>
                                                            <textarea name="adminNotes" class="form-control" rows="3" 
                                                                      placeholder="Nhập lý do bỏ qua báo cáo..."></textarea>
                                                        </div>
                                                        <div class="alert alert-warning">
                                                            <i class="fas fa-exclamation-triangle me-2"></i>
                                                            Báo cáo sẽ được đánh dấu là "Đã bỏ qua" và không được xử lý.
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                                        <button type="submit" class="btn btn-secondary">Xác nhận bỏ qua</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <small class="text-muted">Đã xử lý</small>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Reports", new { status = ViewBag.Status, page = i })">
                                @i
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-flag fa-3x text-muted mb-3"></i>
            <p class="text-muted">Không có báo cáo nào.</p>
        </div>
    }
</div>

