@model FashionStore.Models.ViewModels.ProductViewModel

@{
    ViewBag.Title = "Sửa sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-card">
    <div class="card-header">
        <h5 class="card-title">
            <i class="fas fa-edit me-2"></i>Sửa sản phẩm #@Model.Id
        </h5>
        <a href="@Url.Action("Index", "AdminProduct")" class="btn btn-sm btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Quay lại
        </a>
    </div>

    @using (Html.BeginForm("Edit", "AdminProduct", FormMethod.Post, new { @class = "p-4" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

        <div class="row mb-3">
            <div class="col-md-12">
                <div class="mb-3">
                    @Html.LabelFor(m => m.ProductName, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control", placeholder = "Nhập tên sản phẩm" })
                    @Html.ValidationMessageFor(m => m.ProductName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-12">
                <div class="mb-3">
                    @Html.LabelFor(m => m.Description, new { @class = "form-label" })
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 5, placeholder = "Nhập mô tả sản phẩm" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="mb-3">
                    @Html.LabelFor(m => m.Price, new { @class = "form-label" })
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number", step = "0.01", placeholder = "0" })
                        <span class="input-group-text">đ</span>
                    </div>
                    @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    @Html.LabelFor(m => m.DiscountPrice, new { @class = "form-label" })
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.DiscountPrice, new { @class = "form-control", type = "number", step = "0.01", placeholder = "0 (tùy chọn)" })
                        <span class="input-group-text">đ</span>
                    </div>
                    @Html.ValidationMessageFor(m => m.DiscountPrice, "", new { @class = "text-danger" })
                    <small class="form-text text-muted">Để trống nếu không có khuyến mãi</small>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="mb-3">
                    @Html.LabelFor(m => m.CategoryId, new { @class = "form-label" })
                    @Html.DropDownListFor(m => m.CategoryId, new SelectList(ViewBag.Categories, "Id", "CategoryName"), "Chọn danh mục", new { @class = "form-select" })
                    @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    @Html.LabelFor(m => m.Stock, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Stock, new { @class = "form-control", type = "number", placeholder = "0" })
                    @Html.ValidationMessageFor(m => m.Stock, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-12">
                <div class="mb-3">
                    @Html.LabelFor(m => m.ImageUrl, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.ImageUrl, new { @class = "form-control", placeholder = "URL hình ảnh sản phẩm" })
                    @Html.ValidationMessageFor(m => m.ImageUrl, "", new { @class = "text-danger" })
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="mt-2">
                            <img src="@Model.ImageUrl" alt="Preview" style="max-width: 200px; border-radius: 4px;" />
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-check form-switch mb-3">
                    @Html.CheckBoxFor(m => m.Featured, new { @class = "form-check-input", @id = "Featured" })
                    @Html.LabelFor(m => m.Featured, new { @class = "form-check-label", @for = "Featured" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-check form-switch mb-3">
                    @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input", @id = "IsActive" })
                    @Html.LabelFor(m => m.IsActive, new { @class = "form-check-label", @for = "IsActive" })
                </div>
            </div>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-1"></i>Lưu thay đổi
            </button>
            <a href="@Url.Action("Index", "AdminProduct")" class="btn btn-secondary">
                <i class="fas fa-times me-1"></i>Hủy
            </a>
        </div>
    }
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

