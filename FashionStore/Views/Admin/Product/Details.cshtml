@model FashionStore.Models.Entities.Product

@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <div class="admin-card">
            <h5 class="card-title mb-3">
                <i class="fas fa-image me-2"></i>Hình ảnh sản phẩm
            </h5>
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.ProductName" class="img-fluid rounded" style="max-height: 400px; object-fit: cover;" />
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-image"></i>
                    <p>Chưa có hình ảnh</p>
                </div>
            }
        </div>
    </div>

    <div class="col-md-8">
        <div class="admin-card">
            <div class="card-header">
                <h5 class="card-title">
                    <i class="fas fa-info-circle me-2"></i>Thông tin sản phẩm #@Model.Id
                </h5>
                <div class="action-buttons">
                    <a href="@Url.Action("Edit", "AdminProduct", new { id = Model.Id })" class="btn btn-sm btn-warning">
                        <i class="fas fa-edit me-1"></i>Sửa
                    </a>
                    <a href="@Url.Action("Index", "AdminProduct")" class="btn btn-sm btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại
                    </a>
                </div>
            </div>

            <div class="p-4">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Tên sản phẩm:</strong>
                        <p class="mb-0">@Model.ProductName</p>
                    </div>
                    <div class="col-md-6">
                        <strong>Danh mục:</strong>
                        <p class="mb-0">
                            <span class="badge badge-info">@(Model.Category?.CategoryName ?? "N/A")</span>
                        </p>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <strong>Mô tả:</strong>
                        <p class="mb-0">@(string.IsNullOrEmpty(Model.Description) ? "Chưa có mô tả" : Model.Description)</p>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Giá gốc:</strong>
                        <p class="mb-0"><strong>@Model.Price.ToString("N0") đ</strong></p>
                    </div>
                    <div class="col-md-6">
                        <strong>Giá khuyến mãi:</strong>
                        <p class="mb-0">
                            @if (Model.DiscountPrice > 0 && Model.DiscountPrice < Model.Price)
                            {
                                <strong class="text-danger">@Model.DiscountPrice.Value.ToString("N0") đ</strong>
                            }
                            else
                            {
                                <span class="text-muted">Không có</span>
                            }
                        </p>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Tồn kho:</strong>
                        <p class="mb-0">
                            @if (Model.Stock > 0)
                            {
                                <span class="badge badge-success">@Model.Stock sản phẩm</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Hết hàng</span>
                            }
                        </p>
                    </div>
                    <div class="col-md-6">
                        <strong>Trạng thái:</strong>
                        <p class="mb-0">
                            @if (Model.IsActive)
                            {
                                <span class="badge badge-success">Kích hoạt</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">Tắt</span>
                            }
                        </p>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Sản phẩm nổi bật:</strong>
                        <p class="mb-0">
                            @if (Model.Featured)
                            {
                                <span class="badge badge-warning">
                                    <i class="fas fa-star me-1"></i>Có
                                </span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">Không</span>
                            }
                        </p>
                    </div>
                    <div class="col-md-6">
                        <strong>Ngày tạo:</strong>
                        <p class="mb-0">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

