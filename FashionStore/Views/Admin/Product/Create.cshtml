@model FashionStore.Models.ViewModels.ProductViewModel

@{
    ViewBag.Title = "Thêm sản phẩm mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-card">
    <div class="card-header">
        <h5 class="card-title">
            <i class="fas fa-plus-circle me-2"></i>Thêm sản phẩm mới
        </h5>
        <a href="@Url.Action("Index", "AdminProduct")" class="btn btn-sm btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Quay lại
        </a>
    </div>

    @using (Html.BeginForm("Create", "AdminProduct", FormMethod.Post, new { @class = "p-4" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

        <div class="row mb-3">
            <div class="col-md-12">
                <div class="mb-3">
                    @Html.LabelFor(m => m.ProductName, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control", placeholder = "Nhập tên sản phẩm" })
                    @Html.ValidationMessageFor(m => m.ProductName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-12">
                <div class="mb-3">
                    @Html.LabelFor(m => m.Description, new { @class = "form-label" })
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 5, placeholder = "Nhập mô tả sản phẩm" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <!-- Variants -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h6 class="mb-0"><i class="fas fa-swatchbook me-2"></i>Biến thể (Size / Màu / SKU)</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm" id="variantTable">
                        <thead>
                            <tr>
                                <th>Size</th>
                                <th>Màu</th>
                                <th>SKU</th>
                                <th>Giá riêng</th>
                                <th>Tồn kho</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><input type="text" name="Variants[0].Size" class="form-control form-control-sm" placeholder="VD: M" /></td>
                                <td><input type="text" name="Variants[0].Color" class="form-control form-control-sm" placeholder="VD: Red" /></td>
                                <td><input type="text" name="Variants[0].SKU" class="form-control form-control-sm" placeholder="SKU" /></td>
                                <td><input type="number" step="0.01" min="0" name="Variants[0].Price" class="form-control form-control-sm" placeholder="Giá biến thể" /></td>
                                <td><input type="number" min="0" name="Variants[0].Stock" class="form-control form-control-sm" placeholder="Tồn" value="0" /></td>
                                <td>
                                    <button type="button" class="btn btn-sm btn-danger" onclick="removeVariantRow(this)"><i class="fas fa-trash"></i></button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <button type="button" class="btn btn-outline-primary btn-sm" onclick="addVariantRow()">
                    <i class="fas fa-plus"></i> Thêm biến thể
                </button>
                <small class="text-muted d-block mt-2">Nếu để trống tất cả trường trong biến thể thì sẽ không lưu.</small>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="mb-3">
                    @Html.LabelFor(m => m.Price, new { @class = "form-label" })
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number", step = "0.01", placeholder = "0" })
                        <span class="input-group-text">đ</span>
                    </div>
                    @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    @Html.LabelFor(m => m.DiscountPrice, new { @class = "form-label" })
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.DiscountPrice, new { @class = "form-control", type = "number", step = "0.01", placeholder = "0 (tùy chọn)" })
                        <span class="input-group-text">đ</span>
                    </div>
                    @Html.ValidationMessageFor(m => m.DiscountPrice, "", new { @class = "text-danger" })
                    <small class="form-text text-muted">Để trống nếu không có khuyến mãi</small>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="mb-3">
                    @Html.LabelFor(m => m.CategoryId, new { @class = "form-label" })
                    @Html.DropDownListFor(m => m.CategoryId, new SelectList(ViewBag.Categories, "Id", "CategoryName"), "Chọn danh mục", new { @class = "form-select" })
                    @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    @Html.LabelFor(m => m.Stock, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Stock, new { @class = "form-control", type = "number", placeholder = "0" })
                    @Html.ValidationMessageFor(m => m.Stock, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-12">
                <div class="mb-3">
                    @Html.LabelFor(m => m.ImageUrl, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.ImageUrl, new { @class = "form-control", placeholder = "URL hình ảnh sản phẩm" })
                    @Html.ValidationMessageFor(m => m.ImageUrl, "", new { @class = "text-danger" })
                    <small class="form-text text-muted">Nhập đường dẫn URL của hình ảnh</small>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-check form-switch mb-3">
                    @Html.CheckBoxFor(m => m.Featured, new { @class = "form-check-input", @id = "Featured" })
                    @Html.LabelFor(m => m.Featured, new { @class = "form-check-label", @for = "Featured" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-check form-switch mb-3">
                    @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input", @id = "IsActive", @checked = "checked" })
                    @Html.LabelFor(m => m.IsActive, new { @class = "form-check-label", @for = "IsActive" })
                </div>
            </div>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-1"></i>Tạo mới
            </button>
            <a href="@Url.Action("Index", "AdminProduct")" class="btn btn-secondary">
                <i class="fas fa-times me-1"></i>Hủy
            </a>
        </div>
    }

<script>
    function addVariantRow() {
        const table = document.querySelector('#variantTable tbody');
        const index = table.querySelectorAll('tr').length;
        const row = document.createElement('tr');
        row.innerHTML = `
            <td><input type="text" name="Variants[${index}].Size" class="form-control form-control-sm" placeholder="VD: M" /></td>
            <td><input type="text" name="Variants[${index}].Color" class="form-control form-control-sm" placeholder="VD: Red" /></td>
            <td><input type="text" name="Variants[${index}].SKU" class="form-control form-control-sm" placeholder="SKU" /></td>
            <td><input type="number" step="0.01" min="0" name="Variants[${index}].Price" class="form-control form-control-sm" placeholder="Giá biến thể" /></td>
            <td><input type="number" min="0" name="Variants[${index}].Stock" class="form-control form-control-sm" placeholder="Tồn" value="0" /></td>
            <td><button type="button" class="btn btn-sm btn-danger" onclick="removeVariantRow(this)"><i class="fas fa-trash"></i></button></td>
        `;
        table.appendChild(row);
    }

    function removeVariantRow(btn) {
        const row = btn.closest('tr');
        const tbody = row.parentElement;
        tbody.removeChild(row);
        // re-index
        const rows = tbody.querySelectorAll('tr');
        rows.forEach((tr, idx) => {
            tr.querySelectorAll('input').forEach(input => {
                input.name = input.name.replace(/Variants\\[\\d+\\]/, `Variants[${idx}]`);
            });
        });
    }
</script>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

