@model FashionStore.Models.Entities.Order

@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-card">
    <div class="card-header">
        <h5 class="card-title">
            <i class="fas fa-receipt me-2"></i>Chi tiết đơn hàng #@Model.Id
        </h5>
        <a href="@Url.Action("Index", "AdminOrder")" class="btn btn-sm btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Quay lại
        </a>
    </div>

    <div class="p-4">
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="admin-card">
                    <h6 class="mb-3">
                        <i class="fas fa-shopping-cart me-2"></i>Thông tin đơn hàng
                    </h6>
                    <div class="mb-2">
                        <strong>Mã đơn hàng:</strong>
                        <span class="badge badge-primary">#@Model.Id</span>
                    </div>
                    <div class="mb-2">
                        <strong>Ngày đặt:</strong>
                        <p class="mb-0">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                    <div class="mb-2">
                        <strong>Trạng thái:</strong>
                        <p class="mb-0">
                            <span class="status-badge status-@Model.Status.ToLower()">@Model.Status</span>
                        </p>
                    </div>
                    <div class="mb-2">
                        <strong>Tổng tiền:</strong>
                        <p class="mb-0">
                            <span class="text-danger" style="font-size: 20px; font-weight: 700;">@Model.TotalAmount.ToString("N0") đ</span>
                        </p>
                    </div>
                    <div class="mb-2">
                        <strong>Phương thức thanh toán:</strong>
                        <p class="mb-0">@(Model.PaymentMethod ?? "N/A")</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="admin-card">
                    <h6 class="mb-3">
                        <i class="fas fa-user me-2"></i>Thông tin khách hàng
                    </h6>
                    <div class="mb-2">
                        <strong>Họ tên:</strong>
                        <p class="mb-0">@(Model.User?.FullName ?? "N/A")</p>
                    </div>
                    <div class="mb-2">
                        <strong>Username:</strong>
                        <p class="mb-0">@(Model.User?.Username ?? "N/A")</p>
                    </div>
                    <div class="mb-2">
                        <strong>Email:</strong>
                        <p class="mb-0">@(Model.User?.Email ?? "N/A")</p>
                    </div>
                    <div class="mb-2">
                        <strong>Điện thoại:</strong>
                        <p class="mb-0">@(Model.User?.Phone ?? "N/A")</p>
                    </div>
                    <div class="mb-2">
                        <strong>Địa chỉ giao hàng:</strong>
                        <p class="mb-0">@(Model.ShippingAddress ?? "N/A")</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="admin-card">
            <h6 class="mb-3">
                <i class="fas fa-box me-2"></i>Chi tiết sản phẩm
            </h6>
            <div class="table-wrapper">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Số lượng</th>
                            <th>Đơn giá</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detail in Model.OrderDetails)
                        {
                            <tr>
                                <td>
                                    <strong>@detail.Product.ProductName</strong>
                                </td>
                                <td>@detail.Quantity</td>
                                <td>@detail.UnitPrice.ToString("N0") đ</td>
                                <td><strong>@detail.SubTotal.ToString("N0") đ</strong></td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="3" class="text-end">Tổng cộng:</th>
                            <th>
                                <span class="text-danger" style="font-size: 18px;">@Model.TotalAmount.ToString("N0") đ</span>
                            </th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Notes))
        {
            <div class="admin-card mt-3">
                <h6 class="mb-3">
                    <i class="fas fa-sticky-note me-2"></i>Ghi chú
                </h6>
                <p class="mb-0">@Model.Notes</p>
            </div>
        }
    </div>
</div>

