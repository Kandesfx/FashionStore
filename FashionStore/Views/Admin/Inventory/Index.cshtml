@{
    ViewBag.Title = "Quản lý tồn kho";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-card">
    <div class="card-header">
        <h5 class="card-title">
            <i class="fas fa-warehouse me-2"></i>Quản lý tồn kho
        </h5>
        <div class="d-flex gap-2">
            <a href="@Url.Action("Import", "AdminInventory")" class="btn btn-success">
                <i class="fas fa-plus me-1"></i>Nhập kho
            </a>
            <a href="@Url.Action("Export", "AdminInventory")" class="btn btn-warning">
                <i class="fas fa-minus me-1"></i>Xuất kho
            </a>
            <a href="@Url.Action("Adjust", "AdminInventory")" class="btn btn-info">
                <i class="fas fa-adjust me-1"></i>Điều chỉnh
            </a>
            <a href="@Url.Action("LowStock", "AdminInventory")" class="btn btn-danger">
                <i class="fas fa-exclamation-triangle me-1"></i>Tồn thấp
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Form -->
    <div class="card mb-3">
        <div class="card-body">
            @using (Html.BeginForm("Index", "AdminInventory", FormMethod.Get))
            {
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Sản phẩm:</label>
                        @Html.DropDownList("productId", new SelectList(ViewBag.Products ?? new List<dynamic>(), "Id", "ProductName", ViewBag.ProductId), 
                            "Tất cả sản phẩm", new { @class = "form-select" })
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Loại giao dịch:</label>
                        @Html.DropDownList("transactionType", new SelectList(ViewBag.TransactionTypes ?? new List<string>(), ViewBag.TransactionType), 
                            "Tất cả", new { @class = "form-select" })
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Từ ngày:</label>
                        <input type="date" name="startDate" class="form-control" value="@(ViewBag.StartDate?.ToString("yyyy-MM-dd"))" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Đến ngày:</label>
                        <input type="date" name="endDate" class="form-control" value="@(ViewBag.EndDate?.ToString("yyyy-MM-dd"))" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">&nbsp;</label>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search me-1"></i>Lọc
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>

    @if (ViewBag.Transactions != null && ((System.Collections.Generic.IEnumerable<dynamic>)ViewBag.Transactions).Any())
    {
        <div class="table-wrapper">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Sản phẩm</th>
                        <th>Loại</th>
                        <th>Số lượng</th>
                        <th>Ghi chú</th>
                        <th>Người thực hiện</th>
                        <th>Ngày tạo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var transaction in ViewBag.Transactions)
                    {
                        <tr>
                            <td><strong>#@transaction.Id</strong></td>
                            <td>
                                @if (transaction.Product != null)
                                {
                                    <strong>@transaction.Product.ProductName</strong>
                                    <br />
                                    <small class="text-muted">ID: @transaction.ProductId</small>
                                }
                                else
                                {
                                    <span class="text-muted">ID: @transaction.ProductId</span>
                                }
                            </td>
                            <td>
                                @if (transaction.TransactionType == "Import")
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-arrow-down me-1"></i>Nhập kho
                                    </span>
                                }
                                else if (transaction.TransactionType == "Export")
                                {
                                    <span class="badge bg-warning">
                                        <i class="fas fa-arrow-up me-1"></i>Xuất kho
                                    </span>
                                }
                                else if (transaction.TransactionType == "Sale")
                                {
                                    <span class="badge bg-primary">
                                        <i class="fas fa-shopping-cart me-1"></i>Bán hàng
                                    </span>
                                }
                                else if (transaction.TransactionType == "Return")
                                {
                                    <span class="badge bg-info">
                                        <i class="fas fa-undo me-1"></i>Trả hàng
                                    </span>
                                }
                                else if (transaction.TransactionType == "Adjustment_Increase")
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-plus me-1"></i>Điều chỉnh tăng
                                    </span>
                                }
                                else if (transaction.TransactionType == "Adjustment_Decrease")
                                {
                                    <span class="badge bg-danger">
                                        <i class="fas fa-minus me-1"></i>Điều chỉnh giảm
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@transaction.TransactionType</span>
                                }
                            </td>
                            <td>
                                <strong class="@(transaction.TransactionType == "Import" || transaction.TransactionType == "Return" || transaction.TransactionType == "Adjustment_Increase" ? "text-success" : "text-danger")">
                                    @if (transaction.TransactionType == "Import" || transaction.TransactionType == "Return" || transaction.TransactionType == "Adjustment_Increase")
                                    {
                                        <span>+@transaction.Quantity</span>
                                    }
                                    else
                                    {
                                        <span>-@transaction.Quantity</span>
                                    }
                                </strong>
                            </td>
                            <td>
                                <small>@(string.IsNullOrEmpty(transaction.Notes) ? transaction.Reason : transaction.Notes)</small>
                                @{
                                    var orderIdObj = transaction.OrderId;
                                    int? orderId = orderIdObj != null ? (int?)orderIdObj : null;
                                }
                                @if (orderId.HasValue)
                                {
                                    <br />
                                    <a href="@Url.Action("Details", "AdminOrder", new { id = orderId })" target="_blank">
                                        <small>Đơn hàng #@orderId</small>
                                    </a>
                                }
                            </td>
                            <td>
                                @if (transaction.CreatedBy != null)
                                {
                                    <small>@transaction.CreatedBy.Username</small>
                                }
                                else
                                {
                                    <small class="text-muted">Hệ thống</small>
                                }
                            </td>
                            <td>
                                <small>@transaction.CreatedDate.ToString("dd/MM/yyyy HH:mm")</small>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { 
                                productId = ViewBag.ProductId, 
                                transactionType = ViewBag.TransactionType, 
                                startDate = ViewBag.StartDate?.ToString("yyyy-MM-dd"), 
                                endDate = ViewBag.EndDate?.ToString("yyyy-MM-dd"), 
                                page = i 
                            })">
                                @i
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-warehouse fa-3x text-muted mb-3"></i>
            <p class="text-muted">Không có giao dịch tồn kho nào.</p>
        </div>
    }
</div>

